



<div class=" d-flex justify-content-between align-items-center">
    <h1 class="category-title">All Cinemas</h1>
</div>

<table class="table caption-top">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">CinemaName</th>
            <th scope="col">Show Movies</th>
     
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {

            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.Name</td>
                <td> <a href="/Customer/Cinema/ShowMovies?cinemaId=@item.Id" class="btn btn-primary">ShowMovies</a></td>
   

            </tr>
        }


    </tbody>
</table>