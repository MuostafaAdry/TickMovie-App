<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center">
        <h1 class="text-primary">All Order</h1>

        <!-- Search Bar -->
        <form class="d-flex">
            <input type="text" class="form-control me-2" id="search"
                   name="query" placeholder="Search...">
            <button type="submit" class="btn btn-primary">
                Search
            </button>
        </form>

    </div>
</div>




<div class="table-responsive">
    <table class="table table-striped">
        <thead class="table-dark">
            <tr>
                @* <th>User Name</th> *@
                @* <th>User Email</th> *@
                @* <th>Phone</th> *@
                 <th>Order Id</th>  
                <th>Movie Name</th>
                <th>Image</th>
                <th>Cinema</th>

                <th>Tickets</th>
                <th>Price</th>

                <th>Total</th>
                <th>Order Date</th>
                <th>Status</th>
                <th>Payment</th>
                <th>Shiped</th>
                @* <th>Actions</th> *@
                @* <th>totalOverall</th> *@




            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    @* <td>@item.Shop.ApplicationUser.UserName</td> *@
                    @* <td>@item.Shop.ApplicationUser.Email</td> *@
                    @* <td>@item.Shop.ApplicationUser.PhoneNumber</td> *@
                    <td>@item.MovieId</td>
                    <td>@item.Movie.Name</td>
                    <td><img src="~/movies/@item.Movie.ImgUrl" class="img-thumbnail" width="50"></td>
                    <td>@item.Movie.Cinema.Name</td>
                    <td class="fw-bold">@item.Count</td>
                    <td class="text-success">$@item.Movie.Price</td>
                    <td class="text-primary fw-bold">$@(item.Count * item.Movie.Price)</td>
                    <td>@item.Shop.OrderDate.ToShortDateString()</td>



                    <td class="text-primary fw-bold">
                        @if (@item.Shop.Status)
                        {
                            <p> <i class="fas fa-check-circle text-success"></i> Done</p>
                        }
                        else
                        {
                            <p> <i class="fas fa-times-circle text-danger"></i> Canceled</p>
                        }

                    </td>
                    <td class="text-primary fw-bold">
                        @if (@item.Shop.PaymentStatus)
                        {
                            <span> <i class="fas fa-check-circle text-success"></i> Done</span>
                        }
                        else
                        {
                            <span> <i class="fas fa-times-circle text-danger"></i> Canceled</span>
                        }
                    </td>
                    <td class="text-danger">@item.Shop.OrderShipedStatus</td>
                    @* <td> *@
                    @*     <a href="/Customer/Home/MoreDetails?MovieId=@item.MovieId" class="btn btn-warning btn-sm">Edit</a> *@

                    
                    @*     <div class="col-3 col-sm-4 col-lg-2 offset-lg-1 text-right pt-2"> *@
                    @*         <a href="/Customer/Cart/Delete?productid=@item.Movie.Id" class="btn btn-danger bg-gradient py-2 "> *@
                    @*             <i class="bi bi-trash-fill"></i> *@
                    @*         </a> *@
                    @*     </div> *@
                    @* </td> *@
                    @* <td class="text-primary fw-bold"> $@item.Shop.OrderTotal</td> *@
                </tr>
            }
        </tbody>
      
    </table>
    <div class="d-flex justify-content-between align-items-center mt-4">
        <h1>Your Total: @ViewBag.total</h1>

        <nav aria-label="Page navigation example">
            <ul class="pagination mb-0">
                @for (int i = 0; i <= ViewBag.paginationPages; i++)
                {
                    <li class="page-item"><a class="page-link" href="/Customer/Order/Index?page=@(i+1)">@(i + 1)</a></li>
                }
                <li>
                    <a href="/Customer/Order/Index" class="btn btn-primary ms-2">
                        All Orders
                    </a>
                </li>
            </ul>
        </nav>
    </div>


</div>



